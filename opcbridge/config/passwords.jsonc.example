{
  // Centralized user/password/role store for the opcbridge suite.
  //
  // Notes:
  // - This file supports JSON with comments (JSONC).
  // - Passwords are stored as salted PBKDF2-SHA256 hashes.
  // - If this file exists, opcbridge ignores legacy `admin_auth.json`.
  //
  // To initialize via API instead of editing this file manually:
  //   POST /auth/init { "username": "admin", "password": "...", "timeoutMinutes": 0 }
  //
  "timeoutMinutes": 0,
  "users": [
    {
      "username": "admin",
      "role": "admin",
      "kdf": {
        "algorithm": "pbkdf2-sha256",
        "iterations": 250000,
        "saltB64": "REPLACE_ME",
        "hashB64": "REPLACE_ME"
      }
    }
  ]
}
