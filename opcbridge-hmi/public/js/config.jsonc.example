{
  "opcbridge": {
    "host": "OPCBRIDGE_HOST",
    "httpPort": 8080,
    "wsPort": 8090,
    "writeToken": "OPCBRIDGE_WRITE_TOKEN"
  },
  "alarms": {
    "host": "OPCBRIDGE_HOST",
    "httpPort": 8085,
    "wsPort": 8086
  },
  "hmi": {
    "defaultScreen": "console_background",
    "touchscreenMode": false,
    "viewOnlyMode": false

    // Optional: write access control for HMI -> opcbridge writes (POST /api/opc/write).
    // Default is allow-all (no restrictions). Add writeAccess only if you want to restrict writes.
    //
    // "writeAccess": {
    //   "allow": ["192.168.100.0/24", "10.20.30.77/32"],
    //   "deny": [],
    //   "trustProxyHeaders": false
    // }
  }
}
